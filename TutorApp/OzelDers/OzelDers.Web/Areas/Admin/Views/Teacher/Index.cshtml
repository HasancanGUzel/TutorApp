@using OzelDers.Core;

@model List<TeacherDto>
<hr />
<a class="btn btn-outline-primary"
   asp-area="Admin"
   asp-controller="Teacher"
   asp-action="Create">Öğretmen Ekle</a>
<hr />
<table class="table table-responsive table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a class="btn btn-warning btn-sm"
                   asp-area="Admin"
                   asp-controller="Teacher"
                   asp-action="Edit"
                   asp-route-id=@user.UserId>Düzenle</a>

                        <a class="btn btn-danger btn-sm"
                   asp-area="Admin"
                   asp-controller="Teacher"
                   asp-action="Delete"
                   asp-route-id=@user.UserId>Sil</a>
                    </td>
                </tr>
            }
        }
        else
        {
            TempData["Message"] = Jobs.CreateMessage("Bilgi", "Kayıtlı bir rol bilgisi bulunmamaktadır.", "warning");
        }
    </tbody>
</table>