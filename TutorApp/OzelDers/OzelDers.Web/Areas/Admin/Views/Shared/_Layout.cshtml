<!DOCTYPE html>

<html lang="tr">

<head>
  <meta name="viewport" content="width=device-width" />
  <title>@ViewBag.Title</title>
  <link rel="stylesheet" href="~/lib/fa/css/font-awesome.min.css" />
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
  <link href="~/lib/mdb/css/mdb.min.css" rel="stylesheet" />
  <script type="text/javascript" src="~/lib/mdb/js/mdb.min.js"></script>
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/OzelDers.Web.styles.css" asp-append-version="true" />
</head>

<body>
  <div class="container">
    <div class="row my-4">
      <div class="row mb-4">
        <div class="col-12 col-lg-3">
          <a class="d-table text-decoration-none text-danger fs-4" asp-area="Admin" asp-controller="Home" asp-action="Index">OzelDersAdmin</a>
        </div>
      </div>
      <div class="col-12 col-lg-3">
        @await Html.PartialAsync("_AdminSideBarPartial")
      </div>
      <div class="col-12 col-lg-9">
        <div class="row">
          <div class="col">
            @RenderBody()
          </div>
        </div>
      </div>
    </div>

  </div>

  <footer class="footer app-footer navbar bg-light fixed-bottom border-top">
    <div class="container">
      <span class="text-muted">
        &copy; 2022 - OzelDers.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
      </span>
    </div>
  </footer>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
