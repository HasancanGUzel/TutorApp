@using OzelDers.Core;
@model List<RoleDto> // gelen eri 1 tane değil liste şeklinde gönderdik burda da öyle alıyorz
<h1>Roller</h1>
<br>
<a class="btn btn-outline-primary"
   asp-area="Admin"
   asp-controller="Role"
   asp-action="Create">Yeni Role Ekle</a>
<hr />
<table class="table table-responsive table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Rol Adı</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count>0) // rolde gelen veri içi doluysa burası çalışssın
        {
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>@role.Description</td>
                    <td>
                        <a class="btn btn-warning btn-sm"
                   asp-area="Admin"
                   asp-controller="Role"
                   asp-action="Edit"
                   asp-route-id=@role.Id>Düzenle</a>

                        <a class="btn btn-danger btn-sm"
                   asp-area="Admin"
                   asp-controller="Role"
                   asp-action="Delete"
                   asp-route-id=@role.Id>Sil</a>
                    </td>
                </tr>
            }
        }
        else 
        {
            TempData["Message"] = Jobs.CreateMessage("Bilgi", "Kayıtlı bir role bilgisi bulunmamaktadır.", "warning");
        }

    </tbody>
</table>
