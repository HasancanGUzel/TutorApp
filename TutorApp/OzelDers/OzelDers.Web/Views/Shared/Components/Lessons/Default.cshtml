@using OzelDers.Entity.Concrete
@model List<Lesson>
<div class="list-group list-group-light list-group-small">
  <a class="list-group-item list-group-item-action px-3 @(ViewBag.SelectedLesson==null ? "active" : "")"
    asp-controller="OzelDers" asp-action="TeacherList" asp-route-lessonurl="">Tümünü Göster</a>
  @foreach (var lesson in Model)
  {
    <a class="list-group-item list-group-item-action px-3 @(ViewBag.SelectedLesson==lesson.Url ? "active" : "")"
    asp-controller="OzelDers" asp-action="TeacherList" asp-route-lessonurl=@lesson.Url>@lesson.Name</a>
  }
</div>
