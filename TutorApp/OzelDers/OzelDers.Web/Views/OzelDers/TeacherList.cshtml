@using OzelDers.Web.Models.Dtos
@model List<TeacherListDto>
@{
    ViewData["Title"] = "Home Page";
}


<div class="mt-4 row">
    <div class="col-12 col-lg-3 mb-3 mb-lg-0">
        @await Component.InvokeAsync("Lessons")
    </div>
    <div class="col-12 col-lg-9">
        <div class="row">
            @foreach (var teacherListDto in Model)
            {
                <div class="col-md-6 col-xl-4">
                    @await Html.PartialAsync("_TeacherPartial", teacherListDto)
                </div>
            }
        </div>
    </div>
</div>
